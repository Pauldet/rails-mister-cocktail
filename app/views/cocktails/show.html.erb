
<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <h1> <%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |dose| %>
        <p><%="#{dose.ingredient.name} #{dose.description}"  %>
       <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></p>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-4">
      <%= simple_form_for([@cocktail, @dose]) do |f| %>

        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit 'Add dose', class: 'btn btn-primary' %>
        <%= link_to "Back to list",cocktails_path, class: "btn btn-primary"  %>
      <% end %>
    </div>
  </div>
</div>

